FROM python:3.7.7-alpine

ENV LC_ALL C.UTF-8
ENV LANG C.UTF-8
# Python, don't write bytecode!
ENV PYTHONDONTWRITEBYTECODE 1

# -- Install Pipenv:
RUN apk update \
	&& apk add --no-cache \
		curl \
	&& rm -rf /var/cache/apk/*

RUN curl --silent https://bootstrap.pypa.io/get-pip.py | python3.7

# Backwards compatility.
RUN rm -fr /usr/local/bin/python3 && ln /usr/local/bin/python3.7 /usr/local/bin/python3

RUN pip3 install --no-cache-dir pipenv

# -- Install Application into container:
RUN set -ex && mkdir /app

WORKDIR /app

# -- Install build deps and python packages:
ONBUILD COPY build-deps.in build-deps.in
ONBUILD COPY requirements.txt requirements.txt

ONBUILD RUN set -ex \
	&& apk update && cat build-deps.in | xargs apk add --no-cache \
	&& pip install --no-cache-dir -r requirements.txt \
	&& cat build-deps.in | xargs apk del

# -- Install runtime dependencies:
ONBUILD COPY runtime-deps.in runtime-deps.in
ONBUILD RUN set -ex \
	&& cat runtime-deps.in | xargs apk add --no-cache 


# --------------------
# - Using This File: -
# --------------------

# FROM room2352/python:py3.7-alpine

# COPY . /app

